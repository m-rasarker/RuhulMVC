@using static RuhulMVC.Models.Product
@model IEnumerable<RuhulMVC.Models.Product>
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.css" />
@{
    ViewData["Title"] = "Index";
}

<h1>List of Products</h1>


<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <select name="Category" class="form-select">
            <option value="">All Category</option>
            @foreach (var bg in Enum.GetNames(typeof(Category)))
            {
                <option value="@bg">@bg</option>
            }
        </select>
    </div>
   

    <div class="col-md-4">
        <button type="submit" class="btn btn-primary w-100">Search</button>
    </div>
</form>


 
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th>Quantity</th>             
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-warning">  <span class="bi bi-eye me-1" aria-hidden="true"></span>Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">   <i class="bi bi-pen"></i>Edit</a>           
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"> <span class="bi bi-trash me-1" aria-hidden="true"></span>Delete</a>
            </td>
        </tr>


            
}
    </tbody>
</table>
